<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h2>Update the drone</h2>
            <form action="/drones/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">MaxSpeed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <button type="submit" class="btn btn-dark">Update Drone</button>
            </form>
        </div>

    </div>

</div>